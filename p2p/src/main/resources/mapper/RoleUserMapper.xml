<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gs.dao.RoleUserDAO">
    <insert id="save" parameterType="roleUser">
        <![CDATA[
            insert into t_roleuser(rid,huid) values (#{rid},#{huid});
        ]]>
    </insert>

    <select id="listAll" resultType="roleUser">
        <![CDATA[
        select * from t_roleuser
        ]]>
    </select>

    <update id="update" parameterType="roleUser">
        <![CDATA[
            update t_roleuser
        ]]>
        <set>
            <if test="rid != null">
                rid = #{rid},
            </if>
            <if test="huid != null">
                huid =#{huid},
            </if>
        </set>
        where ruid = #{ruid}
    </update>

    <sql id="roleUserVO_criteria">
        <if test="roleUserVO != null and roleUserVO.rname != null and roleUserVO.rname != ''">
            and r.rname like concat('%', #{roleUserVO.rname} ,'%')
        </if>
        <if test="roleUserVO != null and roleUserVO.huname != null and roleUserVO.huname != ''">
            and r.content like concat('%', #{roleUserVO.huname} ,'%')
        </if>
    </sql>

    <select id="listPagerCriteria" resultType="com.gs.vo.RoleUserVO">
        select r.rid,r.rname,r.content,h.huid as huid,h.phone as phone,h.huname as huname,h.email as email from t_role r,t_roleuser ru,
        t_huser h where ru.ruid = ruid and ru.rid = r.rid and ru.huid = h.huid
        <include refid="roleUserVO_criteria"/>
    </select>

    <select id="countCriteria" resultType="Long">
        select count(ru.ruid) from t_roleuser ru where ru.ruid = ruid
        <include refid="roleUserVO_criteria"/>
    </select>
</mapper>